<%= render 'shared/errors', obj: @todo %>

<%= form_for @todo, html: { class: "form-horizontal", role: "form" } do |f| %>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :name %>
    </div>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Name of ToDo", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :description %>
    </div>
    <div class="col-md-8">
      <%= f.text_field :description, rows: 10, class: "form-control", placeholder: "Enter ToDo steps" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-8 col-md-offset-2">
      <%= f.submit class: "btn btn-primary btn-lg btn-background horizontal-center" %>
    </div>
  </div>
<% end %>
<div class="col-md-8 col-md-offset-2 center">
  <%= link_to "Back to todos listing", todos_path %>
</div>
