<%= render 'shared/page_title', title: "listing all todo's" %>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Edit</th>
    <th>Show</th>
    <th>Delete</th>
  </tr>
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.name %></td>
      <td><%= todo.description %></td>
      <td><%= link_to "Edit", edit_todo_path(todo) %></td>
      <td><%= link_to "Show", todo_path(todo) %></td>
      <td><%= link_to "Delete", todo_path(todo), method: :delete, data: { confirm: "Are you sure" } %></td>
    </tr>
  <% end %>
</table>