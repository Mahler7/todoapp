<%= render "shared/page_title", title: "Sign In" %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(:session, html: { class: "form-horizontal", role: "form" }, url: sign_in_path) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email, "Email" %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password, "Password" %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit "Sign In", class: "btn btn-primary btn-lg btn-background" %>
        </div>
      </div>
    <% end %>
  </div>
</div>